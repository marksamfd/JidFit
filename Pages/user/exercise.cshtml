@page
@model JidFit.Pages.user.exerciseModel
@{
}
<style>
    .exercise-table {
        border-collapse: collapse;
        width: 100%;
    }

        .exercise-table td, .exercise-table th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .exercise-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .exercise-table tr:hover {
            background-color: #ddd;
        }

        .exercise-table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }

    .circle {
        width: 200px;
        height: 200px;
        position: relative;
        margin: 1em auto;
        background: #e8e8e8;
        border-radius: 50%;
        overflow: hidden;
    }

        .circle .percent {
            position: absolute;
            width: 100%;
            height: 100%;
            clip: rect(0px, 200px, 200px, 100px);
            background: #4CAF50;
            animation: grow 2s linear infinite;
        }

    .keyframes grow {
        from

    {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }

    }
</style>
<table class="exercise-table">
    <thead>
        <tr>
            <th>Exercise</th>
            <th>Done</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Exercise 1</td>
            <td><button onclick="markDone(this)">Done</button></td>
        </tr>
        <tr>
            <td>Exercise 2</td>
            <td><button onclick="markDone(this)">Done</button></td>
        </tr>
        <tr>
            <td>Exercise 3</td>
            <td><button onclick="markDone(this)">Done</button></td>
        </tr>
    </tbody>
</table>

<div id="circle">
    <div class="percent"></div>
</div>

